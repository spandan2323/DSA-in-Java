class Solution {

    public String encode(List<String> strs) {
        if(strs.size()==0){
            return Character.toString((char)258);
        }
        StringBuilder sb = new StringBuilder();
        String seperate = Character.toString((char)257);

        for(String s : strs){
            sb.append(s.length());
            sb.append(seperate);
            sb.append(s);
        }
        return sb.toString();
    }

    public List<String> decode(String str) {
        if(str.equals(Character.toString((char)258))){
            return new ArrayList();
        }
        String seperate = Character.toString((char)257);
        List<String> res = new ArrayList<>();
        int i=0;
        while(i<str.length()){
            int sepIndex = str.indexOf(seperate, i);
            int len = Integer.parseInt(str.substring(i, sepIndex));
            i = sepIndex+1;

            String word = str.substring(i, i+len);
            res.add(word);
            i= i+len;
        }
        return res;
    }
}
