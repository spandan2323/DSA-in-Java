class Solution {
    public int longestConsecutive(int[] nums) {
        int n= nums.length;
        if(n==0) return 0;
        if(n==1) return 1;

        int longest = 1;
        Set<Integer> set = new HashSet<>();

        for(int i=0; i<n; i++){
            set.add(nums[i]);
        }

        for(Integer itr: set){
            if(!set.contains(itr-1)){
                int count =1;
                int x= itr;
                while(set.contains(x+1)){
                    count= count+1;
                    x = x+1;
                }
                longest = Math.max(longest, count);
            }

        }
        return longest;
    }
}
